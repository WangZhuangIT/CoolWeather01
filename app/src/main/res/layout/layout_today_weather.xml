<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_avg_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/colorWhite"
        android:text="30℃"
        android:textSize="140dp" />

    <LinearLayout
        android:id="@+id/me"
        android:layout_below="@+id/textView_avg_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/image_weather1"
            android:layout_width="28dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:text=" ～～～～ "/>
        <ImageView
            android:id="@+id/image_weather2"
            android:layout_width="28dp"
            android:layout_height="20dp" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/me"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="@dimen/pic_wid"
                android:layout_height="@dimen/pic_wid"
                android:src="@mipmap/degree_pic"/>

            <TextView
                android:id="@+id/textView_degree"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="26/10℃"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="@dimen/pic_wid"
                android:layout_height="@dimen/pic_wid"
                android:src="@mipmap/weather"/>

            <TextView
                android:id="@+id/teView_weather"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:textColor="@color/colorWhite"
                android:text="晴"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_avg_degree">

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="@dimen/pic_wid"
                android:layout_height="@dimen/pic_wid"
                android:src="@mipmap/wind_dir_pic"/>

            <TextView
                android:id="@+id/textView_wind_dir"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                android:paddingLeft="20dp"
                android:text="风向"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="@dimen/pic_wid"
                android:layout_height="@dimen/pic_wid"
                android:src="@mipmap/wind_power_pic"/>

            <TextView
                android:id="@+id/textView_power"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:textColor="@color/colorWhite"
                android:text="风力"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>